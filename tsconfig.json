{
  "compilerOptions": {
      "lib": ["es2020"],
      "module": "commonjs",
      "target": "es2020",
      "outDir": "dist",
      "rootDir": "src",
  
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "moduleResolution": "node",
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src/*.ts"],
    "exclude" : ["test/*.test.ts"],
}
